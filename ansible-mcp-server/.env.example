# Ansible MCP Server Environment Configuration Template
# Copy this file to .env and customize for your environment
# DO NOT EDIT THIS FILE DIRECTLY - IT'S TRACKED BY GIT

# Ansible Configuration
ANSIBLE_BASE_PATH=/path/to/your/ansible/directory
ANSIBLE_INVENTORY_PATH=/path/to/your/inventory.ini
ANSIBLE_PLAYBOOKS_PATH=/path/to/your/playbooks
ANSIBLE_SSH_KEY_PATH=~/.ssh/your_private_key
ANSIBLE_HOST_KEY_CHECKING=False

# Network Device Configuration
OPENWRT_HOST=192.168.1.1
OPENWRT_USER=root
OPENWRT_SSH_PORT=22
OPENWRT_PYTHON_INTERPRETER=/usr/bin/python3

MACPRO_HOST=192.168.1.100
MACPRO_USER=your_username
MACPRO_SSH_PORT=22
# Use ansible-vault for sensitive passwords
MACPRO_BECOME_PASS_VAULT_ID=your_vault_id

RPI5_HOST=192.168.1.101
RPI5_USER=your_username
RPI5_SSH_PORT=22

LINODE_HOST=your.linode.ip.address
LINODE_USER=your_username
LINODE_SSH_PORT=22

# Security Settings
MCP_SERVER_NAME=ansible-mcp-server
MCP_SERVER_VERSION=1.0.0
LOG_LEVEL=info

# Optional: Command timeout in milliseconds
COMMAND_TIMEOUT=30000

# Optional: Maximum concurrent commands
MAX_CONCURRENT_COMMANDS=3