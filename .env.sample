# MCP Home Automation Environment Configuration
# Copy this file to .env and fill in your actual values
# DO NOT commit .env to version control - it contains sensitive information

# =============================================================================
# ANSIBLE MCP SERVER CONFIGURATION
# =============================================================================

# Base path for Ansible operations (directory containing playbooks, inventory, etc.)
ANSIBLE_BASE_PATH=/path/to/your/MCPHomeAutomation

# Path to Ansible inventory file
ANSIBLE_INVENTORY_PATH=/path/to/your/MCPHomeAutomation/inventory.ini

# Path to Ansible playbooks directory
ANSIBLE_PLAYBOOKS_PATH=/path/to/your/MCPHomeAutomation/playbooks

# Path to SSH private key for Ansible connections
ANSIBLE_SSH_KEY_PATH=~/.ssh/id_rsa

# Disable SSH host key checking (set to 'False' for home networks)
ANSIBLE_HOST_KEY_CHECKING=False

# Command timeout in milliseconds
COMMAND_TIMEOUT=30000

# Maximum concurrent Ansible commands
MAX_CONCURRENT_COMMANDS=3

# Logging level (debug, info, warn, error)
LOG_LEVEL=info

# MCP Server identification
MCP_SERVER_NAME=ansible-mcp-server
MCP_SERVER_VERSION=1.0.0

# =============================================================================
# DEVICE CONFIGURATION - Replace with your actual device details
# =============================================================================

# OpenWRT Router Configuration
OPENWRT_HOST=YOUR_ROUTER_IP
OPENWRT_USER=YOUR_ROUTER_USERNAME
OPENWRT_PYTHON_INTERPRETER=/usr/bin/python3
OPENWRT_SSH_PORT=22

# Mac Pro Server Configuration
MACPRO_HOST=YOUR_MACPRO_IP
MACPRO_USER=YOUR_MACPRO_USERNAME
MACPRO_SSH_PORT=2220
# Ansible Vault ID for sudo password (optional)
MACPRO_BECOME_PASS_VAULT_ID=vault_password

# Raspberry Pi 5 Configuration
RPI5_HOST=YOUR_RPI5_IP
RPI5_USER=YOUR_RPI5_USERNAME
RPI5_SSH_PORT=22

# Linode VPS Configuration
LINODE_HOST=YOUR_LINODE_IP
LINODE_USER=YOUR_LINODE_USERNAME
LINODE_SSH_PORT=22

# =============================================================================
# NETWORK CONFIGURATION
# =============================================================================

# Home network subnet (e.g., 192.168.1.0/24)
HOME_NETWORK_SUBNET=192.168.1.0/24

# Default gateway/router IP
DEFAULT_GATEWAY=YOUR_ROUTER_IP

# DNS servers (comma-separated)
DNS_SERVERS=8.8.8.8,1.1.1.1

# =============================================================================
# WIFI CONFIGURATION (for OpenWRT management)
# =============================================================================

# Default WiFi SSID
WIFI_SSID=YOUR_WIFI_SSID

# WiFi password (WPA2)
WIFI_PASSWORD=YOUR_WIFI_PASSWORD

# LAN IP for router
LAN_IP=YOUR_LAN_IP

# =============================================================================
# ADDITIONAL SECURITY SETTINGS
# =============================================================================

# SSH connection timeout
SSH_CONNECT_TIMEOUT=10

# SSH server alive interval
SSH_SERVER_ALIVE_INTERVAL=60

# Enable SSH agent forwarding
SSH_AGENT_FORWARDING=false

# =============================================================================
# DEVELOPMENT/DEBUG SETTINGS
# =============================================================================

# Enable debug mode
DEBUG=false

# Log file path (optional)
LOG_FILE=/var/log/mcp-home-automation.log

# Enable verbose Ansible output
ANSIBLE_VERBOSE=false

# =============================================================================
# INSTRUCTIONS FOR SETUP
# =============================================================================
#
# 1. Copy this file to .env: cp .env.sample .env
# 2. Replace all YOUR_* placeholders with your actual values
# 3. Ensure your SSH keys are properly configured
# 4. Test connectivity to all devices
# 5. Run the MCP servers
#
# Security Notes:
# - Never commit .env to version control
# - Use strong, unique passwords
# - Consider using Ansible Vault for sensitive values
# - Regularly rotate SSH keys and passwords
#
# Example .env entries:
# OPENWRT_HOST=192.168.1.1
# OPENWRT_USER=root
# MACPRO_HOST=192.168.1.100
# MACPRO_USER=david
# WIFI_SSID=MyHomeNetwork
# WIFI_PASSWORD=SuperSecretPassword123!</content>
